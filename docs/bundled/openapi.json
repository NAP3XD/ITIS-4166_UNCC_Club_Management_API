        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "description": "Page number",
            "schema": {
              "type": "integer",
              "example": 1,
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "description": "Number of clubs per page",
            "schema": {
              "type": "integer",
              "example": 10,
              "default": 10,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of clubs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Club"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new club",
        "description": "Create a new club (authenticated users). User becomes the club admin automatically.",
        "tags": [
          "Clubs"
        ],
        "security": [
          {
            "BearerAuth": []
