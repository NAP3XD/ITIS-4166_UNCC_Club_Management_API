  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token obtained from login endpoint"
      }
    },
    "schemas": {
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
            "description": "JWT token valid for 7 days"
          },
          "user": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer",
                "example": 1
              },
              "email": {
                "type": "string",
                "example": "user@example.com"
              },
              "name": {
                "type": "string",
                "example": "John Doe"
              },
              "role": {
                "type": "string",
                "enum": [
                  "CLUB_MEMBER",
                  "CLUB_ADMIN",
                  "API_ADMIN"
                ],
                "example": "CLUB_MEMBER"
              },
              "createdAt": {
                "type": "string",
                "format": "date-time"
              },
              "updatedAt": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true,
            "example": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "role": {
            "type": "string",
            "enum": [
              "CLUB_MEMBER",
              "CLUB_ADMIN",
              "API_ADMIN"
            ],
            "example": "CLUB_MEMBER"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          }
        },
        "required": [
          "email",
          "name",
          "password"
        ]
      },
      "Club": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true,
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Chess Club"
          },
          "description": {
            "type": "string",
            "example": "A club for chess enthusiasts"
          },
          "adminId": {
            "type": "integer",
            "example": 2
          },
          "admin": {
            "type": "object",
            "readOnly": true,
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          }
        },
        "required": [
          "name"
        ]
      },
      "Event": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true,
            "example": 1
          },
          "clubId": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Monthly Meeting"
          },
          "description": {
            "type": "string",
            "example": "Our monthly club gathering"
          },
          "location": {
            "type": "string",
            "example": "Student Center Room 201"
          },
          "eventDate": {
            "type": "string",
            "format": "date-time",
            "example": "2025-12-01T18:00:00Z"
          },
          "club": {
            "type": "object",
            "readOnly": true,
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              }
            }
          },
          "rsvps": {
            "type": "array",
            "readOnly": true,
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "userId": {
                  "type": "integer"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "ATTENDING",
                    "NOT_ATTENDING",
                    "MAYBE"
                  ]
                }
              }
            }
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "example": "2025-11-01T10:00:00Z"
          }
        },
        "required": [
          "clubId",
          "title",
          "eventDate"
        ]
      },
      "Announcement": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true,
            "example": 1
          },
          "clubId": {
            "type": "integer",
            "description": "ID of the club this announcement belongs to",
            "example": 2
          },
          "title": {
            "type": "string",
            "description": "Title of the announcement",
            "example": "Our First Meeting"
          },
          "content": {
            "type": "string",
            "description": "Full content of the announcement",
            "example": "Our first meeting will be held Tuesday at 6 PM in Woodward 140."
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "description": "When the announcement was created",
            "example": "2025-09-01T18:00:00Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "readOnly": true,
            "description": "When the announcement was last updated",
            "example": "2025-09-01T19:30:00Z"
          }
        },
        "required": [
          "clubId",
          "title",
          "content"
        ]
      }
    },
    "responses": {
      "ValidationError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "validation failed"
          },
          "details": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "notFoundError": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "example": "Not found"
          }
        },
        "required": [
          "error"
        ]
      }
    }
  }
